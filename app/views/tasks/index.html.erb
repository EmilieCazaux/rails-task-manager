<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<%= link_to 'Edit', edit_task_path(task) %>
<%= link_to "Delete", delete_task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <li><%= link_to task.title , task_path(task) %></li>
<% end %>
</ul>

<%= link_to 'Create a new task', new_task_path %>
